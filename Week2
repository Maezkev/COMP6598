import java.util.Scanner;

public class Week2{
  public static void main(String args[]){
    System.out.println("Poin Pertama");
    System.out.println("");
    
    System.out.println(25 % 4);
    System.out.println(4 % 5);
    System.out.println(20 * 7 + 56);
    System.out.println(3 - 2 * 5);
    
    System.out.println("_______________");
    
    System.out.println("");
    System.out.println("Poin Kedua = Mengubah dari meter ke kaki (feet)");
    System.out.println("");
    
    Scanner P2Scan = new Scanner(System.in);
    System.out.println("panjang (dalam meter) = ");
    double P2meter = P2Scan.nextDouble();
    
    double P2feet = P2meter * 3.28;
    System.out.println(P2meter + " meter sama dengan " + P2feet + " feet.");
    
    System.out.println("_______________");
    
    System.out.println("");
    System.out.println("Poin Ketiga = Mengubah ke lowercase dan UPPERCASE");
    System.out.println("");
    
    String tulisanup, tulisanlow, tulisanuser;
    Scanner inputuser = new Scanner(System.in);
        
    System.out.print("Tulisan anda = ");
    tulisanuser = inputuser.nextLine();
        
    tulisanup = tulisanuser.toUpperCase();
    tulisanlow = tulisanuser.toLowerCase();
    System.out.println("Tulisan anda dalam huruf kapital = " + tulisanup);
    System.out.println("Tulisan anda dalam huruf kecil = " + tulisanlow);
  }
}
